<div class="row">
  <div class="col-xs-12 text-center">
    <h3>{{#if isEdit}}EDIT{{else}}ADD{{/if}} AUTHOR</h3>
  </div>
</div>
<br>

{{#each messages}}
  <div>{{this}}</div>
{{/each}}
<br>

<div class="row">
  <div class="col-xs-3 text-center"></div>
    <div class="col-xs-6 text-center">
    <form action="/authors{{#if isEdit}}/{{author.id}}?_method=PUT{{/if}}" method="POST">
      <input id="id" type="hidden" name="id" value="{{author.id}}">

      <div class="form-group">
        <label for="firstName">First Name</label><input id="firstName" type="text" name="firstName" class="form-control" value="{{author.firstName}}">
      </div>
      <div class="form-group">
        <label for="lastName">Last Name</label><input id="lastName" type="text" name="lastName" class="form-control" value="{{author.lastName}}">
      </div>
      <div class="form-group">
        <label for="biography">Biography</label><textarea id="biography" rows="5" name="biography" class="form-control">{{author.biography}}</textarea>
      </div>
      <div class="form-group">
        <label for="imageUrl">Image URL</label><input id="imageUrl" type="text" name="imageUrl" class="form-control" value="{{author.imageUrl}}">
      </div>
      <div class="form-group">
        <label for="books">Books</label>
        <select id="books" name="books" class="form-control" multiple="true">
          {{#each books}}
            <option id="books" name="books" value="{{id}}" {{#if selected}}selected="true"{{/if}}>{{title}}
            </option>
          {{/each}}
        </select>
      </div>

      <br>
      <input id="submit" type="submit" value="Save"> <a href="/authors/{{author.id}}" class="btn btn-warning" role="button">Cancel</a></div>

    </form>
</div>
</div>
